unit Click_GNSS2_timer;

uses Click_GNSS2_types;

var
    timerCounter : uint32_t; 
    
procedure Timer_interrupt(); iv IVT_INT_PIT0; 
procedure gnss2_configTimer(); 

implementation

procedure gnss2_configTimer(); 
begin
    SIM_SCGC6 := SIM_SCGC6 or (1 shl PIT); 
    NVIC_IntEnable(IVT_INT_PIT0); 
    PIT_MCR := 0x00; 
    PIT_LDVAL0 := 119999; 
    PIT_TCTRL0 := PIT_TCTRL0 or 2; 
    PIT_TCTRL0 := PIT_TCTRL0 or 1; 
    EnableInterrupts(); 
end;

procedure Timer_interrupt(); iv IVT_INT_PIT0; 
begin
    gnss2_tick(); 
    inc(timerCounter);
    PIT_TFLG0.TIF := 1; 
end;

end.